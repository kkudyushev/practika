<Window x:Class="WpfApp1.UserPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="UserPanel" Height="450" Width="800">
    <Grid>
        <Label x:Name="currentLogin" FontSize="14" Margin="10,10,0,0">Текущий логин:</Label>
        <Label x:Name="currentPassword" FontSize="14" Margin="10,25,0,0">Текущий пароль:</Label>
        <Label x:Name="currentMail" FontSize="14" Margin="10,40,0,0">Текущая почта:</Label>
        
        <TextBox x:Name="newEmail" BorderBrush="Gray" Width="200" Height="20" HorizontalAlignment="Center" Margin="10,0,0,0">Новая почта</TextBox>
        <Button Width="100" Height="20" Margin="310,0,0,0" HorizontalAlignment="Center" Click="Button_Click">Сменить почту</Button>

        <TextBox x:Name="newPassword" BorderBrush="Gray" Width="200" Height="20" HorizontalAlignment="Center" Margin="10,90,0,0">Новый пароль</TextBox>
        <Button Width="100" Height="20" Margin="310,90,0,0" HorizontalAlignment="Center" Click="Button_Click_1">Сменить пароль</Button>
    </Grid>
</Window>
